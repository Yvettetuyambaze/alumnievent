<!DOCTYPE html> <!-- Document type declaration -->
<html lang="en"> <!-- Language attribute for the document -->

<head>
    <meta charset="UTF-8"> <!-- Character encoding for the document -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsive meta tag for the device width -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> <!-- Materialize CSS library link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" /> <!-- Font Awesome CSS library link -->
    <link rel="stylesheet" href="/css/style.css"> <!-- Custom CSS file link -->
    <title>Alumni Events</title> <!-- Title of the webpage -->
</head>

<body>
    {{> _header}} <!-- Including partial template for header -->
    {{> _add_btn}} <!-- Including partial template for add button -->
    <div class="container"> <!-- Container for the main content -->
        {{{body}}} <!-- Dynamic content injection -->
    </div>
    {{> _footer}} <!-- Including partial template for footer -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> <!-- Materialize JavaScript library link -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.14.1/ckeditor.js" integrity="sha256-bEIQpI72w9NJuIVhTLFUF2/8uxl0u5800r8ddViuv+o=" crossorigin="anonymous"></script> <!-- CKEditor JavaScript library link -->

    <script>
        M.Sidenav.init(document.querySelector('.sidenav')) // Initializing the side navigation
        M.FormSelect.init(document.querySelector('#status')) // Initializing the form select element

        CKEDITOR.replace('body', { // Replacing the 'body' textarea with CKEditor
            plugins: 'wysiwygarea, toolbar, basicstyles, link'
        })
    </script>
</body>

</html>
