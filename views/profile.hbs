<style>
    .profile-picture {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
</style>

<div class="container mt-5">
    <h1>User Profile</h1>
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <!-- Profile Picture -->
                    {{#if user.profilePicture}}
                    <img src="{{user.profilePicture}}" alt="Profile Picture" class="img-fluid profile-picture">
                    {{else}}
                    <img class="img-fluid equal-size profile-picture" src="/images/profilepic.jpg"
                        alt="Profile Picture">
                    {{/if}}
                    <input type="file" class="form-control mt-2" name="profilePicture" accept="image/*">
                </div>
                <div class="col-md-6">
                    <div>
                        <a href="/admin/users" class="btn btn-secondary mt-3">Update Alumni Records (Admin Only)</a>
                        <p>User object:</p>
                        <pre>{{person}}</pre>
                    </div>

                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <!-- User Details -->
                    {{#each user}}
                    <h4>Name: {{firstName}}</h4>
                    <p>Email: {{email}}</p>
                    <p>Role: {{role}}</p>
                    <form action="/admin/update-role" method="post" class="form-inline">
                        <input type="hidden" name="id" value="{{user._id}}" />
                        <div class="form-group mr-2">
                            <label for="role">Update Role:</label>
                            <select name="role" id="role" class="form-control">
                                <option value="admin" {{#if (eq role 'admin' )}}selected{{/if}}>Admin</option>
                                <option value="user" {{#if (eq role 'alumni' )}}selected{{/if}}>Alumni</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                    {{/each}}
                </div>

                <div class="col-md-6">
                    <!-- Additional Fields -->
                    <div class="mt-3">
                        <label for="phone">Phone:</label>
                        <input type="text" class="form-control" name="phone" value="{{user.phone}}">
                    </div>
                    <div class="mt-3">
                        <label for="bio">Bio:</label>
                        <textarea class="form-control" name="bio">{{user.bio}}</textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>

            <!-- Link to Check Events Created -->
            <div class="mt-4">
                <a href="/events" class="btn btn-success">Check Events Created</a>
            </div>
        </div>
    </div>
</div>

