<!-- Page Title -->
<h1>Manage Alumni Records</h1>

<!-- Row with top margin -->
<div class="row mt-4">
    <!-- Column with medium width -->
    <div class="col-md-6">
        <!-- Loop through each user to display details and provide role update form -->
        {{#each users}}
            <!-- User Details Section -->
            <h4>Name: {{users.name}}</h4>
            <p>Email: {{users.email}}</p>
            <p>Role: {{users.role}}</p>

            <!-- Form for updating user role -->
            <form action="/admin/update-role" method="post" class="form-inline">
                <!-- Hidden input to store user ID -->
                <input type="hidden" name="id" value="{{user._id}}" />

                <!-- Form group for role selection -->
                <div class="form-group mr-2">
                    <label for="role">Update Role:</label>
                    <!-- Dropdown for selecting a new role -->
                    <select name="role" id="role" class="form-control">
                        <!-- Admin role option -->
                        <option value="admin" {{#if (eq role 'admin')}}selected{{/if}}>Admin</option>
                        <!-- Alumni role option -->
                        <option value="user" {{#if (eq role 'alumni')}}selected{{/if}}>Alumni</option>
                    </select>
                </div>

                <!-- Button to submit role update -->
                <button type="submit" class="btn btn-success">Update</button>
            </form>
        {{/each}}
    </div>
</div>
