<div class="container" style="margin-bottom: 20px;">
  <!-- Contact card -->
  <div class="card">
    <div class="card-content">
      <span class="card-title">Contact Us</span> <!-- Title for the contact form -->
      <p>Please fill out the form below to contact us</p> <!-- Prompt for users to fill out the form -->
      <form action="/contact" method="POST"> <!-- Form for submitting contact information -->
        <div class="input-field">
          <input type="text" id="name" name="name" required> <!-- Input field for user's name -->
          <label for="name">Your Name</label> <!-- Label for the name input field -->
        </div>
        <div class="input-field">
          <input type="email" id="email" name="email" required> <!-- Input field for user's email -->
          <label for="email">Your Email</label> <!-- Label for the email input field -->
        </div>
        <div class="input-field">
          <textarea id="message" name="message" class="materialize-textarea" required></textarea> <!-- Text area for user's message -->
          <label for="message">Your Message</label> <!-- Label for the message text area -->
        </div>
        <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit</button> <!-- Submit button for sending the message -->
      </form>
    </div>
  </div>
</div>
